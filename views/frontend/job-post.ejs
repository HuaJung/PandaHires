<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>  </title>
  <link rel="stylesheet" href="/css/bs-custom.css">
  <link rel="stylesheet" href="/css/job-post.css">
</head>
<body>
  <%- include('../common/nav-company.ejs') %>
  <main>
    <div class="banner">
      <div class="grid-banner">
          <!-- <div class="company-logo"><%=companyName %></div> -->
          <div class="job-title"><%=job.name %></div>
          <div class="location"><img src="/icons/location.svg" alt="location icon">  <span><%=job.city  %>, <%=job.country %></span> </div>
          <div class="button-wrapper"><a href="/careers/<%=companyName %>/job_openings/<%=job.id%>/apply"  class="small-btn-apply"><span>Apply to Job</span></a></div>
      </div>
    </div>
    <div class="container my-5">
      <div class="jd job-detail">
        <p><%=job.description %>
          
        </p>
      </div>
      <hr>
      <div class="jd responsibilities">
        <h2>Responsibilities
        </h2>
        <p>
          <%=job.responsibility %>
        </p>
      </div>
      <hr>
      <div class="jd min-qualifications">
        <h2>Minimum Qualifications</h2>
        <p><%=job.qualification %>
          
        </p>
      </div>
      <div class="jd preferred-qualifications">
        <% if (job.preferred) { %>
        <h2>Preferred Qualifications</h2>
        <p><%=job.preferred %> 
          <% } %>
          
        </p>
      </div>

    </div>
    <%-include('../common/error.ejs')  %> 
  </main>


  <%- include('../common/footer.ejs') %>

  <script src="/js/bootstrap.bundle.min.js"></script>
  <script type="module" src="/js/jobPost.js"></script>
</body>
</html>