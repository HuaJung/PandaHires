<div class="modal">
  <dialog class="modal-dialog">
    <h2>Submit Your Application</h2>
    <div class="card">
      <div class="close-btn">
      <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
        <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
      </svg></div>
        <form enctype="multipart/form-data" method="POST">
          <div class="grid-form">
            <label class="label">FIRST NAME <small style="color: red;">*</small></label>
            <input type="text" name="firstName" required>
            <label class="label"> LAST NAME <small style="color: red;">*</small></label>
            <input type="text" name="lastName" required>
            <label class="label">EMAIL <small style="color: red;">*</small></label>
            <input type="email" name="email" required>
            <label class="label">PHONE NO. <small style="color: red;">*</small></label>
            <input type="tel" name="phone" required>
            <label class="label">CURRENT LOCATION <small style="color: red;">*</small></label>
            <div class="form-group">
              <input type="text" class="country" name="country" placeholder="COUNTRY" required>
              <input type="text" class="city" placeholder="CITY" name="city" required>
            </div>
            <label class="label">RESUME/CV <small style="color: red;">*</small> <small>( File type: PDF only )</small></label>
            <div class="form-group">
              <label for="pdf" class="resume btn">ATTACH RESUME / CV 
                <input type="file" accept=".pdf" id="pdf" name="resume" required> 
              </label>
              <div class="preview"></div>
            </div>
            <label class="label" >LINKEDIN</label>
            <input type="text" name="linkedin">
            <label class="label" >WEBSITE</label>
            <input type="text" name="website">
            <label class="label" >GITHUB</label>
            <input type="text" name="github">
          </div>
          <div class="button-wrapper">
            <button type="submit" class="btn-submit"><span> Submit</span></button>
          </div>
          <%-include('../common/error.ejs')  %> 
        </form>
    </div>
  </dialog>
</div>

